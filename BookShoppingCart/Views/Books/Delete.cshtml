@model BookShoppingCart.Models.Book

@{
    ViewData["Title"] = "Delete";
}



<h2 class="mt-3">Silmek istediğine emin misin ?</h2>
<div>
    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
           @* @Html.DisplayNameFor(model => model.BookName)*@ Kitap Adı :
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BookName)
        </dd>
        <hr />
        <dt class = "col-sm-2">
            @* @Html.DisplayNameFor(model => model.AuthorName)*@Yazar Adı :
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AuthorName)
        </dd>
        <hr />
        <dt class = "col-sm-2">
            @* @Html.DisplayNameFor(model => model.Price)*@ Kitap Fiyatı (TL) :
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <hr />
        <dt class = "col-sm-2">
            @* @Html.DisplayNameFor(model => model.Description)*@ Kitap Açıklama :
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <hr />
        <dt class = "col-sm-2">
            @* @Html.DisplayNameFor(model => model.Image)*@  Resim :
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Image)
        </dd>
        <hr />
        <dt class = "col-sm-2">
            @*@Html.DisplayNameFor(model => model.Genre)*@Kategori :
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Genre.GenreName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sil" class="btn btn-danger" /> |
        <a class="btn btn-dark" asp-action="Index">Listeye Dön</a>
    </form>
</div>
