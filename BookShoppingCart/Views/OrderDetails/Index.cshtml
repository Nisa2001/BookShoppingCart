@model IEnumerable<BookShoppingCart.Models.OrderDetail>

@{
    ViewData["Title"] = "Index";
}

<h1 class="mt-4 mb-3">Siparişler</h1>

@*<p>
    <a class="btn btn-success" asp-action="Create">Yeni Sipariş Ouştur</a>
</p>*@
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                @*@Html.DisplayNameFor(model => model.Quantity)*@ Adet
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.UnitPrice)*@ Fiyat
            </th>
            <th>
               @* @Html.DisplayNameFor(model => model.Order)*@ Sipariş ID
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.Order)*@ Sipariş Tarih
            </th>
           
            <th>
                @*@Html.DisplayNameFor(model => model.Book)*@ Kitap Adı
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.Book)*@ Yazar
            </th>
           
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnitPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Order.UserId)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Order.CreateDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Book.BookName)
                </td>
              
            <td>
                @Html.DisplayFor(modelItem => item.Book.AuthorName)
            </td>
            <td>
                   @* <a class="btn btn-outline-secondary" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |*@
                    <a class="btn btn-dark" asp-action="Details" asp-route-id="@item.Id">Detay</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
